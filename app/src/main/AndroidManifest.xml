<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logogym"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logogym"
        android:supportsRtl="true"
        android:theme="@style/Theme.YourSmartGymBuddy"
        tools:targetApi="31">
        <receiver
            android:name=".NewAppWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_app_widget_info" />
        </receiver>

        <!-- Splash Activity (Launcher) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.YourSmartGymBuddy.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" /> <!-- Sign Up Activity -->
        <activity
            android:name=".SignUpActivity"
            android:exported="true" /> <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true" /> <!-- Dashboard Activity -->
        <activity
            android:name=".DashBoardActivity"
            android:exported="true" /> <!-- Workout Plans Activity -->
        <activity
            android:name=".WorkoutPlansActivity"
            android:exported="true" /> <!-- Nutrition Activity -->
        <activity
            android:name=".NutritionActivity"
            android:exported="true" /> <!-- Progress Tracking Activity -->
        <activity
            android:name=".ProgressTrackingActivity"
            android:exported="true" /> <!-- âœ… Workout Activity (missing before) -->
        <activity
            android:name=".WorkoutsActivity"
            android:exported="true" />
    </application>

</manifest>